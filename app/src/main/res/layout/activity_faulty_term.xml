<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="is.siggigauti.tms_app.FaultyTermActivity">

    <EditText
        android:id="@+id/oldTermEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Old terminal"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"/>

    <EditText
        android:id="@+id/newTermEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oldTermEditText"
        android:layout_alignStart="@+id/oldTermEditText"
        android:layout_below="@+id/oldTermEditText"
        android:ems="10"
        android:hint="New terminal"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp"/>

    <Button
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skipta Ãºt"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="142dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Notendalykill"
        android:inputType="textPassword"
        android:layout_below="@+id/newTermEditText"
        android:layout_alignLeft="@+id/newTermEditText"
        android:layout_alignStart="@+id/newTermEditText"/>
</RelativeLayout>
