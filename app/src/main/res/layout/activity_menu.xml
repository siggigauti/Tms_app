<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="is.siggigauti.tms_app.MenuActivity">

    <Button
        android:id="@+id/storeInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upplýsingar um búð"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="99dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/menuInfoTextView"
        android:layout_alignLeft="@+id/menuInfoTextView"
        android:layout_alignStart="@+id/menuInfoTextView"/>

    <Button
        android:id="@+id/faultyTermButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skipta út terminal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="171dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/storeInfoButton"
        android:layout_alignLeft="@+id/storeInfoButton"
        android:layout_alignStart="@+id/storeInfoButton"/>

    <TextView
        android:id="@+id/menuInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="Veldu aðgerð úr tökkunum hér að neðan."
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Veldu aðgerð úr tökkunum hér að neðan."/>
</RelativeLayout>
